#!/singularity/test
# test docker

source ${SOURCEDIR}/tests/scripts/common.func

tmpdir=`mktmpdir`
tmpimage="${tmpdir}/container.sif"

# Test docker definition file
expect-success "Busybox"    ${SUDO} singularity build ${tmpimage} ${SOURCEDIR}/tests/scripts/docker/definition_files/busybox.def
verify-image   "Busybox"    ${tmpimage}

sudo rm ${tmpimage}

expect-success "CentOS"     ${SUDO} singularity build ${tmpimage} ${SOURCEDIR}/tests/scripts/docker/definition_files/centos.def
verify-image   "CentOS"     ${tmpimage}

sudo rm ${tmpimage}

expect-success "Ubuntu"     ${SUDO} singularity build ${tmpimage} ${SOURCEDIR}/tests/scripts/docker/definition_files/ubuntu.def
verify-image   "Ubuntu"     ${tmpimage}

if check-kernel-version ">=3.0.0"; then
    sudo rm ${tmpimage}

    expect-success "Arch"   ${SUDO} singularity build ${tmpimage} ${SOURCEDIR}/tests/scripts/docker/definition_files/arch.def
    verify-image   "Arch"   ${tmpimage}
else
    test-skip "Arch" "kernel >= 3.0.0 is required"
fi