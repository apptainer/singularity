#!/singularity/test
# Test basic echo

source common.func
source instance/instance.func

image=`get-test-image`
instance_name=`gen-instance-name`

arg="${SCRIPT_TESTDIR}/${instance_name}"

expect-success "StartInstance"  singularity instance start ${image} ${instance_name} "${arg}"
echo-instance  "EchoInstance"   `get-echo-port "${instance_name}"`
expect-success "StopInstance"   singularity instance stop ${instance_name}